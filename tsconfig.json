{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "module": "ES2020",
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
  },
  "include": [
    "./src/**/*"
  ]
}
